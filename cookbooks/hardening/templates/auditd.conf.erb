#
# This file controls the configuration of the audit daemon
#

log_file = /var/log/audit/audit.log
log_format = RAW
log_group = root
priority_boost = 4
flush = INCREMENTAL
freq = 20
num_logs = 5
disp_qos = lossy
dispatcher = /sbin/audispd
name_format = NONE
##name = mydomain
space_left = 75
admin_space_left = 50
admin_space_left_action = SUSPEND
disk_full_action = SUSPEND
disk_error_action = SUSPEND
##tcp_listen_port = 
tcp_listen_queue = 5
tcp_max_per_addr = 1
##tcp_client_ports = 1024-65535
tcp_client_max_idle = 0
enable_krb5 = no
krb5_principal = auditd
##krb5_key_file = /etc/audit/audit.key



#4.1.1.1 Ensure audit log storage size is configured
max_log_file= <%= @action_max_log_file %>

#4.1.1.2 Ensure system is disabled when audit logs are full 

space_left_action = <%= @space_left_action %>

action_mail_acct = <%= @action_mail_acct %>

admin_space_left_action = <%= @space_left_action %>

#4.1.1.3 Ensure audit logs are not automatically deleted 

max_log_file_action = <%= @action_max_log_file %>

